{
  "name": "etelios-hrms-backend",
  "version": "1.0.0",
  "description": "Etelios HRMS Backend API - Production-grade HRMS for retail and field sales",
  "main": "src/server.js",
  "scripts": {
    "build": "npm run lint:fix && echo 'Build completed - Node.js application ready'",
    "build:prod": "npm run lint:fix && npm run test:health && echo 'Production build completed'",
    "test:health": "jest tests/unit/health.test.js",
    "start": "node src/server.js",
    "start:dev": "node src/server.js",
    "start:pm2": "pm2 start ecosystem.config.js",
    "start:pm2:dev": "pm2 start ecosystem.config.js --env development",
    "stop:pm2": "pm2 stop ecosystem.config.js",
    "restart:pm2": "pm2 restart ecosystem.config.js",
    "delete:pm2": "pm2 delete ecosystem.config.js",
    "logs:pm2": "pm2 logs",
    "status:pm2": "pm2 status",
    "dev": "nodemon --watch src src/server.js",
    "test": "jest --runInBand --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src tests --ext .js",
    "lint:fix": "eslint src tests --ext .js --fix",
    "format": "prettier --write src tests",
    "docker:build": "docker build -t etelios-backend .",
    "docker:build:prod": "docker build -t etelios-backend:prod .",
    "docker:run": "docker-compose up -d",
    "docker:prod": "docker-compose -f docker-compose.production.yml up -d",
    "docker:verify": "./verify-docker-build.sh",
    "docker:test": "docker build -t etelios-backend:test . && docker run --rm -p 3001:3000 etelios-backend:test",
    "seed": "node scripts/seed.js",
    "migrate": "node scripts/migrate.js",
    "setup:minimal": "node scripts/setup-minimal.js",
    "setup:test-users": "node scripts/setup-test-users.js",
    "test:real-data": "node scripts/test-real-data.js",
    "test:emergency-lock": "node test-emergency-lock-system.js",
    "test:emergency-components": "node test-emergency-lock-components.js",
    "keyvault:test": "node scripts/test-keyvault-connection.js",
    "keyvault:setup": "node scripts/setup-keyvault-secrets.js"
  },
  "keywords": [
    "hrms",
    "erp",
    "retail",
    "field-sales",
    "attendance",
    "payroll",
    "api",
    "nodejs",
    "express",
    "mongodb"
  ],
  "author": "Etelios",
  "license": "ISC",
  "dependencies": {
    "@azure/identity": "^4.0.0",
    "@azure/keyvault-secrets": "^4.7.0",
    "@azure/storage-blob": "^12.19.0",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "http-proxy-middleware": "^2.0.6",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "pm2": "^5.3.0",
    "response-time": "^2.3.2",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=9.0.0"
  }
}
